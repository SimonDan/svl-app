<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="30dp"
              android:layout_marginTop="30dp"
              android:layout_marginRight="30dp"
              android:orientation="vertical"
              tools:context=".AuthenticationActivity">

  <ProgressBar android:id="@+id/progress_bar"
               style="?android:attr/progressBarStyleLarge"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:indeterminate="true"
               android:indeterminateTint="@android:color/holo_orange_light"
               android:indeterminateTintMode="src_atop"
               android:translationZ="2dp"
               android:elevation="2dp"
               android:visibility="invisible"/>

  <TextView
      android:id="@+id/textView3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="50dp"
      android:gravity="center"
      android:text="Spvgg Langenpreising"
      android:layout_marginTop="30dp"
      android:textSize="18sp"
      android:textStyle="bold"/>

  <EditText
      android:id="@+id/text_first_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
      android:backgroundTint="@android:color/holo_orange_light"
      android:ems="10"
      android:hint="Vorname"
      android:inputType="textPersonName"
      android:layout_marginTop="110dp"
      android:textColorHighlight="#FFEB3B"
      android:textColorLink="#FFC107"
      android:textCursorDrawable="@android:color/holo_orange_light"
      android:textSize="12sp"
      android:textStyle="italic"/>

  <EditText
      android:id="@+id/text_last_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
      android:backgroundTint="@android:color/holo_orange_light"
      android:ems="10"
      android:hint="Nachname"
      android:layout_marginTop="150dp"
      android:inputType="textPersonName"
      android:textColorHighlight="#FFEB3B"
      android:textColorLink="#FFC107"
      android:textCursorDrawable="@android:color/holo_orange_light"
      android:textSize="12sp"
      android:textStyle="italic"/>

  <EditText
      android:id="@+id/text_mail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:backgroundTint="@android:color/holo_orange_light"
      android:ems="10"
      android:hint="E-Mail"
      android:inputType="textEmailAddress"
      android:textColorHighlight="#FFEB3B"
      android:textColorLink="#FFC107"
      android:layout_marginTop="190dp"
      android:textCursorDrawable="@android:color/holo_orange_light"
      android:textSize="12sp"
      android:textStyle="italic"/>

  <Button
      android:id="@+id/button_create_account"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="40dp"
      android:layout_marginTop="240dp"
      android:background="#FFC107"
      android:text="Account erstellen"/>

  <TextView
      android:id="@+id/textView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Falls das mobile GerÃ¤t gewechselt wurde und der alte Account noch besteht, beantragen Sie mit Hilfe ihrer Mailadresse einen neuen generieren Zugang"
      android:textSize="12sp"
      android:textStyle="italic"
      android:layout_marginTop="520dp"
      android:layout_marginBottom="10dp"/>

  <Button
      android:id="@+id/button_request_code_dialog"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="580dp"
      android:background="#FFC107"
      android:text="Account Wiederherstellung"/>


</FrameLayout>